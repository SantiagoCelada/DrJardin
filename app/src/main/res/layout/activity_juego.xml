<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.drjardin.JuegoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoquiz">

        <!-- Jugador 1 -->

        <LinearLayout
            android:id="@+id/marcador_jugador1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <ImageView
                    android:id="@+id/j1_vida1"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />

                <ImageView
                    android:id="@+id/j1_vida2"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />

                <ImageView
                    android:id="@+id/j1_vida3"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />
            </LinearLayout>

            <TextView
                android:id="@+id/j1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:maxLength="12"
                android:maxLines="1"
                android:text="USUARIO 1"
                android:textColor="@color/negro"
                android:textSize="@dimen/textoPeque" />

            <TextView
                android:id="@+id/puntos_j1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:textColor="@color/negro"
                android:text="0"
                android:textSize="@dimen/textoGrande" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/medida_icono_peque"
                    android:layout_height="@dimen/medida_icono_peque"
                    android:src="@drawable/player1" />
                <ImageView
                    android:id="@+id/info_jugador1"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:src="@drawable/x2"/>
            </LinearLayout>


        </LinearLayout>


        <!-- Jugador 2 -->

        <LinearLayout
            android:id="@+id/marcador_jugador2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/j2_vida1"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />

                <ImageView
                    android:id="@+id/j2_vida2"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />

                <ImageView
                    android:id="@+id/j2_vida3"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />
            </LinearLayout>

            <TextView
                android:id="@+id/j2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_8dp"
                android:maxLength="12"
                android:maxLines="1"
                android:text="USUARIO 2"
                android:textColor="@color/negro"
                android:textSize="@dimen/textoPeque" />

            <TextView
                android:id="@+id/puntos_j2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_16dp"
                android:text="0"
                android:textColor="@color/negro"
                android:textSize="@dimen/textoGrande" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <ImageView
                    android:id="@+id/info_jugador2"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:visibility="invisible"
                    android:src="@drawable/x2"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="@dimen/medida_icono_peque"
                    android:layout_height="@dimen/medida_icono_peque"
                    android:src="@drawable/player2" />
            </LinearLayout>

        </LinearLayout>

        <!-- Jugador 3 -->

        <LinearLayout
            android:id="@+id/marcador_jugador3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <ImageView
                    android:id="@+id/info_jugador3"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_gravity="center"
                    android:src="@drawable/x2"
                    android:visibility="invisible"/>
                <ImageView
                    android:layout_width="@dimen/medida_icono_peque"
                    android:layout_height="@dimen/medida_icono_peque"
                    android:src="@drawable/player3" />
            </LinearLayout>

            <TextView
                android:id="@+id/puntos_j3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_16dp"
                android:textColor="@color/negro"
                android:text="0"
                android:textSize="@dimen/textoGrande" />

            <TextView
                android:id="@+id/j3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_8dp"
                android:maxLength="12"
                android:maxLines="1"
                android:text="USUARIO 4"
                android:textColor="@color/negro"
                android:textSize="@dimen/textoPeque" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/j3_vida1"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />

                <ImageView
                    android:id="@+id/j3_vida2"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />

                <ImageView
                    android:id="@+id/j3_vida3"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />
            </LinearLayout>
        </LinearLayout>

        <!-- Jugador 4 -->

        <LinearLayout
            android:id="@+id/marcador_jugador4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/medida_icono_peque"
                    android:layout_height="@dimen/medida_icono_peque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/player4" />
                <ImageView
                    android:id="@+id/info_jugador4"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/x2"/>
            </LinearLayout>

            <TextView
                android:id="@+id/puntos_j4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/margin_16dp"
                android:textColor="@color/negro"
                android:text="0"
                android:textSize="@dimen/textoGrande" />

            <TextView
                android:id="@+id/j4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:maxLength="12"
                android:maxLines="1"
                android:text="USUARIO 3"
                android:textColor="@color/negro"
                android:textSize="@dimen/textoPeque" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/j4_vida1"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />

                <ImageView
                    android:id="@+id/j4_vida2"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />
                <ImageView
                    android:id="@+id/j4_vida3"
                    android:layout_width="@dimen/medida_icono_muypeque"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_margin="@dimen/margin_4dp"
                    android:src="@drawable/corazon" />
            </LinearLayout>
        </LinearLayout>

        <!-- Panel central -->

        <LinearLayout
            android:id="@+id/panel_central_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <!-- VIEWANIMATOR JUGADORES-->

            <ViewAnimator
                android:id="@+id/animator_jugadores"
                android:layout_width="@dimen/medida_icono_mediano"
                android:layout_height="@dimen/medida_icono_mediano"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/medida_icono_mediano"
                    android:layout_height="@dimen/medida_icono_mediano"
                    android:src="@drawable/player1" />

                <ImageView
                    android:layout_width="@dimen/medida_icono_mediano"
                    android:layout_height="@dimen/medida_icono_mediano"
                    android:src="@drawable/player2" />

                <ImageView
                    android:layout_width="@dimen/medida_icono_mediano"
                    android:layout_height="@dimen/medida_icono_mediano"
                    android:src="@drawable/player3" />

                <ImageView
                    android:layout_width="@dimen/medida_icono_mediano"
                    android:layout_height="@dimen/medida_icono_mediano"
                    android:src="@drawable/player4" />
            </ViewAnimator>

            <!-- Cronometro -->

            <Chronometer
                android:id="@+id/crono_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textoGrande"
                android:visibility="visible" />

            <!-- PREGUNTA -->

            <TextView
                android:id="@+id/pregunta_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:text="¿Cuantos años puede\n llegar a vivir un elefante?"
                android:textAlignment="center"
                android:textColor="@color/textoPrincipal"
                android:textSize="@dimen/textoMediano"
                android:visibility="visible" />

            <!-- 4 RESPUESTAS BOTON-->

            <LinearLayout
                android:id="@+id/view_4respuestas_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/margin_16dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageButton
                            android:id="@+id/respuesta1_image_button"
                            style="@android:style/Widget.Holo.ImageButton"
                            android:layout_width="@dimen/medida_icono_muygrande"
                            android:layout_height="@dimen/medida_icono_peque"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/boton1_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="25"
                            android:textColor="@color/textoPrincipal" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/respuesta3_image_button"
                            style="@android:style/Widget.Holo.ImageButton"
                            android:layout_width="@dimen/medida_icono_muygrande"
                            android:layout_height="@dimen/medida_icono_peque"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/boton3_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="50"
                            android:textColor="@color/textoPrincipal" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/respuesta2_image_button"
                            style="@android:style/Widget.Holo.ImageButton"
                            android:layout_width="@dimen/medida_icono_muygrande"
                            android:layout_height="@dimen/medida_icono_peque"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/boton2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="75"
                            android:textColor="@color/textoPrincipal" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/respuesta4_image_button"
                            style="@android:style/Widget.Holo.ImageButton"
                            android:layout_width="@dimen/medida_icono_muygrande"
                            android:layout_height="@dimen/medida_icono_peque"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:id="@+id/boton4_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="100"
                            android:textColor="@color/textoPrincipal" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- 4 RESPUESTAS CHECK-->

            <LinearLayout
                android:id="@+id/view_4respuestas_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/check1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:text="25"
                        android:textColor="@color/textoPrincipal"
                        android:textColorLink="@color/colorPrimary"
                        android:textSize="@dimen/textoMediano"
                        android:buttonTint="@color/textoPrincipal" />

                    <CheckBox
                        android:id="@+id/check2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:text="50"
                        android:textColor="@color/textoPrincipal"
                        android:textColorLink="@color/colorPrimary"
                        android:textSize="@dimen/textoMediano"
                        android:buttonTint="@color/textoPrincipal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/check3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:text="75"
                        android:textColor="@color/textoPrincipal"
                        android:textColorLink="@color/colorPrimary"
                        android:textSize="@dimen/textoMediano"
                        android:buttonTint="@color/textoPrincipal" />

                    <CheckBox
                        android:id="@+id/check4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8dp"
                        android:text="100"
                        android:textColor="@color/textoPrincipal"
                        android:textColorLink="@color/colorPrimary"
                        android:textSize="@dimen/textoMediano"
                        android:buttonTint="@color/textoPrincipal" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/boton_two_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/boton_two"
                        style="@android:style/Widget.Holo.ImageButton"
                        android:layout_width="@dimen/medida_icono_muygrande"
                        android:layout_height="@dimen/medida_icono_peque"
                        android:layout_centerInParent="true"
                        android:contentDescription="boton_negro_contestar" />

                    <TextView
                        android:id="@+id/boton_two_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/action_responder"
                        android:textColor="@color/elementosSecundarios"
                        />
                </RelativeLayout>

            </LinearLayout>

            <!-- 2 RESPUESTAS BOTONGROUP -->

            <LinearLayout
                android:id="@+id/view_2respuestas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <RadioGroup
                    android:id="@+id/radio_group_botones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_boton1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/margin_8dp"
                        android:text="50"
                        android:textColor="@color/textoPrincipal"
                        android:textSize="@dimen/textoMediano"
                        android:buttonTint="@color/textoPrincipal" />

                    <RadioButton
                        android:id="@+id/radio_boton2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/margin_8dp"
                        android:text="100"
                        android:textColor="@color/textoPrincipal"
                        android:textSize="@dimen/textoMediano"
                        android:buttonTint="@color/textoPrincipal" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <!-- Panel Extras -->

        <LinearLayout
            android:id="@+id/panel_extras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- VIEWANIMATOR EXTRAS-->

            <ViewAnimator
                android:id="@+id/animator_extras"
                android:layout_width="@dimen/medida_icono_extragrande"
                android:layout_height="@dimen/medida_icono_extragrande">
                <ImageView
                    android:id="@+id/x2_view1"
                    android:layout_width="@dimen/medida_icono_extragrande"
                    android:layout_height="@dimen/medida_icono_extragrande"
                    android:src="@drawable/x2" />

                <ImageView
                    android:id="@+id/x4_view1"
                    android:layout_width="@dimen/medida_icono_extragrande"
                    android:layout_height="@dimen/medida_icono_extragrande"
                    android:src="@drawable/x4" />

                <ImageView
                    android:id="@+id/x2_view2"
                    android:layout_width="@dimen/medida_icono_extragrande"
                    android:layout_height="@dimen/medida_icono_extragrande"
                    android:src="@drawable/x2" />

                <ImageView
                    android:id="@+id/x5_view"
                    android:layout_width="@dimen/medida_icono_extragrande"
                    android:layout_height="@dimen/medida_icono_extragrande"
                    android:src="@drawable/x5" />

                <ImageView
                    android:id="@+id/pierde_view"
                    android:layout_width="@dimen/medida_icono_extragrande"
                    android:layout_height="@dimen/medida_icono_extragrande"
                    android:src="@drawable/pierde" />

                <ImageView
                    android:id="@+id/x4_view2"
                    android:layout_width="@dimen/medida_icono_extragrande"
                    android:layout_height="@dimen/medida_icono_extragrande"
                    android:src="@drawable/x4" />

                <ImageView
                    android:id="@+id/x2_view3"
                    android:layout_width="@dimen/medida_icono_extragrande"
                    android:layout_height="@dimen/medida_icono_extragrande"
                    android:src="@drawable/x2" />

                <ImageView
                    android:id="@+id/extra_view"
                    android:layout_width="@dimen/medida_icono_extragrande"
                    android:layout_height="@dimen/medida_icono_extragrande"
                    android:src="@drawable/extra" />
            </ViewAnimator>

            <!-- Boton 1 -->

            <RelativeLayout
                android:id="@+id/boton_one_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/boton_one"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/botonone"
                    android:contentDescription="boton_negro" />

                <TextView
                    android:id="@+id/boton_one_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/boton_one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:text="@string/action_inicio"
                    android:textColor="@color/textoTransparente"
                    android:textSize="@dimen/textoMediano" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Panel Mensajes -->

        <LinearLayout
            android:id="@+id/panel_mensajes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">
            <ImageView
                android:id="@+id/mensaje_image_view"
                android:layout_width="@dimen/medida_icono_extragrande"
                android:layout_height="@dimen/medida_icono_extragrande"
                android:layout_gravity="center"
                android:src="@drawable/fin"
                android:visibility="visible"/>

            <RelativeLayout
                android:id="@+id/boton_three_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/boton_three"
                    android:layout_width="@dimen/medida_icono_extragrande"
                    android:layout_height="@dimen/medida_icono_muypeque"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="boton_negro"
                    android:scaleType="fitXY"
                    android:src="@drawable/botonone" />

                <TextView
                    android:id="@+id/boton_three_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/boton_three"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_4dp"
                    android:text="@string/continuar"
                    android:textColor="@color/textoTransparente"
                    android:textSize="@dimen/textoMediano" />

            </RelativeLayout>
        </LinearLayout>

        <!-- Panel Records -->

        <LinearLayout
            android:id="@+id/panel_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textoMediano"
                android:textColor="@color/textoPrincipal"
                android:text="@string/guardando_records"/>
            <ProgressBar
                android:id="@+id/progess_barra"
                android:layout_width="@dimen/medida_icono_extragrande"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20dp"
                style="?android:attr/progressBarStyleHorizontal"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
