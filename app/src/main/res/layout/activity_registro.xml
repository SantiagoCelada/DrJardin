<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.android.drjardin.RegistroActivity"
     android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_40dp"
                android:layout_marginBottom="@dimen/margin_20dp">
                <ImageView
                    android:id="@+id/login_image"
                    android:layout_width="@dimen/medida_icono"
                    android:layout_height="@dimen/medida_icono"
                    android:layout_centerInParent="true"
                    android:src="@drawable/login"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20dp">
                <ImageView
                    android:id="@+id/agregar_image"
                    android:layout_width="@dimen/medida_icono"
                    android:layout_height="@dimen/medida_icono"
                    android:layout_centerInParent="true"
                    android:src="@drawable/agregar"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_40dp">
                <ImageView
                    android:id="@+id/actualizar_image"
                    android:layout_width="@dimen/medida_icono"
                    android:layout_height="@dimen/medida_icono"
                    android:layout_centerInParent="true"
                    android:src="@drawable/actualizar"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/fondo3" />
                <ImageView
                    android:id="@+id/eliminar_image"
                    android:layout_width="@dimen/medida_icono"
                    android:layout_height="@dimen/medida_icono"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/eliminar"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
